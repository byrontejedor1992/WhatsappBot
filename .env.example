# Copy to .env and fill
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# WhatsApp Cloud API
VERIFY_TOKEN=resto2025
WHATSAPP_TOKEN=YOUR_PERMANENT_ACCESS_TOKEN
PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID

# Google Sheets
# Put here the base64 of your Service Account JSON
GOOGLE_SERVICE_ACCOUNT=PASTE_BASE64_SERVICE_ACCOUNT_JSON
SHEET_ID=YOUR_GOOGLE_SHEET_ID
SHEET_TAB=Reservas

# Sessions (in-memory TTL; use Redis later if needed)
SESSION_TTL_MS=86400000
